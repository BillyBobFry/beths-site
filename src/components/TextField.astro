---
interface Props {
  name?: string;
  placeholder?: string;
  inputType: "text" | "email" | "password";
}

const { placeholder, name, inputType } = Astro.props;
---

<input
  class="py-1 h-10 border-b border-slate-900 focus:outline-none focus:border-slate-800 bg-transparent"
  type={inputType}
  placeholder={placeholder}
  name={name}
/>
